<?xml version="1.0" encoding="UTF-8"?>
<ResourceDictionary xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Notes.Themes.LightTheme">

    <Color x:Key="MainColor">White</Color>
    <Color x:Key="AppPrimaryColor">#160d30</Color>
    <Color x:Key="AppShellBackgroundColor">#efEEEFFC</Color>
    <Color x:Key="AppBackgroundColor">#D9CFDA</Color>
    <Color x:Key="TileBackgroundColor">#13808080</Color>
    <Color x:Key="TileSelectionColor">#20808080</Color>
    <Color x:Key="PopupBackgroundColor">#55ffffff</Color>
    <Color x:Key="PopupSecondColor">#10000000</Color>
    <Color x:Key="PrimaryColor">Black</Color>
    <Color x:Key="SecondaryColor">Green</Color>
    <Color x:Key="TertiaryColor">#a0555555</Color>
    <Color x:Key="KeyboardPanelColor">White</Color>
    <Color x:Key="FontColor">Black</Color>
    <OnPlatform x:Key="Fontello" x:TypeArguments="x:String">
        <On Platform="Android" Value="fontello.ttf#fontello" />
    </OnPlatform>
</ResourceDictionary>