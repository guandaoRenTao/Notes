<?xml version="1.0" encoding="UTF-8"?>
<ResourceDictionary xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Notes.Themes.DarkTheme">

    <Color x:Key="MainColor">black</Color>
    <Color x:Key="AppPrimaryColor">#160d30</Color>
    <Color x:Key="AppShellBackgroundColor">#ef2d313d</Color>
    <Color x:Key="AppBackgroundColor">#2d313d</Color>
    <Color x:Key="TileBackgroundColor">#13808080</Color>
    <Color x:Key="TileSelectionColor">#20808080</Color>
    <Color x:Key="PopupBackgroundColor">#55000000</Color>
    <Color x:Key="PopupSecondColor">#20ffffff</Color>
    <Color x:Key="PrimaryColor">White</Color>
    <Color x:Key="SecondaryColor">#324580</Color>
    <Color x:Key="TertiaryColor">#a0555555</Color>
    <Color x:Key="KeyboardPanelColor">#333333</Color>
    <Color x:Key="FontColor">Silver</Color>
    <OnPlatform x:Key="Fontello" x:TypeArguments="x:String">
        <On Platform="Android" Value="fontello.ttf#fontello" />
    </OnPlatform>
</ResourceDictionary>